extends layout

block content
    .jumbotron.wicked-admin-title
        .container.wicked-title-container
            h1 All Applications
            
            p Index of all applications in the API Portal.
    
    .container.wicked-container
        br
        table(class='table table-striped')
            thead
                tr
                    th ID
                    th Name
                    th Owner
            tbody
                for app in applications
                    tr
                        td
                            a(href='/applications/#{app.id}')= app.id
                        td= app.name
                        td
                            if app.mainOwner
                                a(href='/users/#{app.mainOwner.userId}')= app.mainOwner.email
                            else
                                | ---
